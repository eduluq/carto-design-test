extends layout

block content  
  
  .container
    .grid
      
      aside#aside-article-page
        ul.menu
        each dir in menu
          li= dir.title
            if dir.files.length
              ul.submenu
                each file in dir.files
                  li 
                    a(href="/:" + file.toLowerCase().split(' ').join('-'))= file

      main#article-page
        .content!= content
